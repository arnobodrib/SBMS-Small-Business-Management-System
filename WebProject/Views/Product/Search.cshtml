@model WebProject.Models.ProductViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MyStyle
    {
    <style>
        table {
            font-family: Arial,sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
}

    
<div>
    <h2>Product Information/Details</h2>
    <form method="post">
        <table>
            <tr>
                <td>CategoryCode</td>
                @*<td><input type="text" name="CategoryCode" value="@Model.CategoryCode"></td>*@
            <td>@Html.DropDownListFor(c => c.CategoryId, Model.CategorySelectListItems, "--Select--", new { id = "CategoryId" })</td>
                @*<td>@Html.DropDownList(c=>c.CategoryCode,Model.CategorySelectListItems,"--Select--")</td>*@
                <td>@Html.ValidationMessageFor(c => c.Code)</td>
            </tr>
            <tr>
                <td>Code</td>
                <td><input type="text" name="Code" value="@Model.Code"></td>
                <td></td>
            </tr>
            <tr>
                <td>Name</td>
                <td><input type="text" name="Name" value="@Model.Name"></td>
                <td></td>
            </tr>
            @*<tr>
                <td>UnitPrice</td>
                <td><input type="text" name="UnitPrice" value="@Model.UnitPrice"></td>
                <td></td>
            </tr>*@
            <tr>
                <td>Recorder_Level</td>
                <td><input type="text" name="Recorder_Level" value="@Model.Recorder_Level"></td>
                <td></td>
            </tr>
            <tr>
                <td>Description</td>
                <td><input type="text" name="Description" value="@Model.Description"></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Search"></td>
                <td>
                    @if (ViewBag.Message != "")
                    {
                        <h3>
                            <b>@ViewBag.Message</b>
                        </h3>
                    }
                </td>
            </tr>
        </table>
    </form>

    @{
        Html.RenderPartial("~/Views/Shared/Product/_ProductDetails.cshtml", Model);
    }
    </div>