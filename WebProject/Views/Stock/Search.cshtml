@model  WebProject.Models.StockViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section MyStyle{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
}


<div>
    <h2>Stock Report</h2>

    <form method="post">
        <table>

            <tr>
                <td>Category:</td>
                <td>@Html.DropDownList("category", null, "--Select--", null)</td>
