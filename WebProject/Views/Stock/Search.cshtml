                <td><input id="StartDate" type="date" name="StartDate" value=" @Model.PurchaseDate" /></td>
            </tr>
            <tr>
                <td>Product:</td>
                @*<td>@Html.DropDownList("product", null, "--Select--", null)</td>*@
                <td>@Html.DropDownList("product", null, "--Select--", null)</td>
                <td>EndDate:</td>
                <td><input id="EndDate" type="date" name="EndDate" value="@Model.ExpireDate " /></td>
                @*<td><input type="text" name="Name" value="@Model.Name" /></td>*@
            </tr>

            <tr></tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td><input type="submit" value="Search" /></td>
            </tr>
        </table>
    </form>
    @{
        Html.RenderPartial("~/Views/Shared/Stock/_StockReportDetails.cshtml", Model);
    }

   




